// apps/console/prisma/schema.prisma

// --------------------------------------------------------
// CONFIG
// --------------------------------------------------------

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("CONSOLE_DATABASE_URL")
  directUrl = env("CONSOLE_DIRECT_DATABASE_URL")
}

// --------------------------------------------------------
// ENUMS
// --------------------------------------------------------

enum UserRole {
  SUPER_ADMIN // Platform owner (Moreways internal)
  ORG_ADMIN   // Law Firm Admin
  LAWYER      // Law Firm Staff
  CLIENT      // Consumer / Plaintiff
}

enum MatterStatus {
  LEAD
  OPEN
  PENDING
  CLOSED
  REJECTED
}

enum TicketPriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

// --------------------------------------------------------
// MODELS
// --------------------------------------------------------

model Organization {
  id        String   @id @default(cuid())
  name      String
  slug      String?  @unique
  
  // [NEW] CRM Fields for Admin Console > Customers View
  plan      String   @default("Starter") 
  status    String   @default("active") // "active", "churned"
  mrr       Decimal  @default(0.00) @map("monthly_recurring_revenue")
  seatLimit Int      @default(5) @map("seat_limit")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  users           User[]
  apiKeys         ApiKey[]
  formSchemas     FormSchema[]
  clients         Client[]
  matters         Matter[]
  formSubmissions FormSubmission[]
  supportTickets  SupportTicket[] // [NEW]

  @@map("organizations")
}

// [EXISTING] Staff / Admin Users (Console Access)
model User {
  id             String   @id @default(cuid())
  organizationId String   @map("organization_id")
  email          String   @unique
  passwordHash   String?  @map("password_hash")
  role           UserRole @default(CLIENT)

  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  organization   Organization @relation(fields: [organizationId], references: [id])
  clientProfile  Client?
  
  assignedTickets SupportTicket[] 

  @@map("users")
}

// [NEW] Web App Users (Public Access)
// This maps to the existing table in the Web App's Supabase instance
// We define it here so Prisma doesn't try to delete it during migrations
model PortalUser {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email        String
  passwordHash String   @map("password_hash")
  name         String?
  phoneNumber  String?  @map("phone_number")
  role         String   @default("client")
  
  createdAt    DateTime @default(now()) @map("created_at")

  @@map("portal_users")
}

// [NEW] Support Ticketing System
model SupportTicket {
  id             String   @id @default(cuid())
  organizationId String   @map("organization_id")
  subject        String
  description    String?  @db.Text
  
  priority       TicketPriority @default(MEDIUM)
  status         TicketStatus   @default(OPEN)
  
  assignedToUserId String? @map("assigned_to_user_id")

  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  organization   Organization @relation(fields: [organizationId], references: [id])
  assignedUser   User?        @relation(fields: [assignedToUserId], references: [id])

  @@map("support_tickets")
}

model ApiKey {
  id             String   @id @default(cuid())
  organizationId String   @map("organization_id")
  keyPrefix      String   @map("key_prefix")
  keyHash        String   @map("key_hash")
  label          String?
  lastUsedAt     DateTime? @map("last_used_at")
  createdAt      DateTime @default(now()) @map("created_at")
  organization   Organization @relation(fields: [organizationId], references: [id])

  @@map("api_keys")
}

model FormSchema {
  id             String   @id @default(cuid())
  organizationId String   @map("organization_id")
  name           String
  version        Int
  schemaJson     Json     @map("schema_json")
  slug           String?  @unique
  isPublished    Boolean  @default(false) @map("is_published")
  isDeprecated   Boolean  @default(false) @map("is_deprecated")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  organization    Organization     @relation(fields: [organizationId], references: [id])
  formSubmissions FormSubmission[]

  @@unique([organizationId, name, version])
  @@index([organizationId, slug, isPublished])
  @@map("form_schemas")
}

model Client {
  id             String   @id @default(cuid())
  organizationId String   @map("organization_id")
  userId         String?  @unique @map("user_id") // Links to Staff User (optional)
  fullName       String   @map("full_name")
  email          String?
  phone          String?
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  organization    Organization     @relation(fields: [organizationId], references: [id])
  user            User?            @relation(fields: [userId], references: [id])
  matters         Matter[]
  formSubmissions FormSubmission[]

  @@map("clients")
}

model Matter {
  id             String       @id @default(cuid())
  organizationId String       @map("organization_id")
  clientId       String       @map("client_id")
  name           String
  status         MatterStatus @default(LEAD)
  createdAt      DateTime     @default(now()) @map("created_at")
  updatedAt      DateTime     @updatedAt @map("updated_at")

  organization    Organization     @relation(fields: [organizationId], references: [id])
  client          Client           @relation(fields: [clientId], references: [id])
  formSubmissions FormSubmission[]

  @@map("matters")
}

model FormSubmission {
  id             String   @id @default(cuid())
  organizationId String   @map("organization_id")
  formSchemaId   String   @map("form_schema_id")
  clientId       String   @map("client_id")
  matterId       String?  @map("matter_id")
  submissionData Json     @map("submission_data")
  flags          Json?    @default("[]") 
  verdict        Json?    @map("verdict")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  organization Organization @relation(fields: [organizationId], references: [id])
  formSchema   FormSchema   @relation(fields: [formSchemaId], references: [id])
  client       Client       @relation(fields: [clientId], references: [id])
  matter       Matter?      @relation(fields: [matterId], references: [id])

  @@map("form_submissions")
}